<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="${dubbo.name}"/>

    <dubbo:registry id="reg-dtc-goods"  address="${dubbo.address}" register="true"/>

    <!-- 用dubbo协议在20884端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20884"/>

    <dubbo:provider protocol="dubbo" registry="reg-dtc-goods"
                    timeout="600000" accepts="400" delay="-1" loadbalance="random"
                    cluster="failover"/>

    <dubbo:annotation/>
</beans>

